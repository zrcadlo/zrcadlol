<%- model_class = Avatar -%>
<div class="page-header">
  <h1>Behold the avatars of the Atman, in lolcommit form</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:repo) %></th>
      <th><%= model_class.human_attribute_name(:visage) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @avatars.each do |avatar| %>
      <tr>
        <td><%= avatar.repo %></td>
        <td><%= image_tag avatar.visage.url %></td>
        <td><%=l avatar.created_at.in_time_zone("Eastern Time (US & Canada)"), format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>
